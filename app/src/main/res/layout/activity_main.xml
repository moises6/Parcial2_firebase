<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondo">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp"
        android:fontFamily="@font/acme"
        android:text="INICIO DE SESSION"
        android:textAllCaps="false"
        android:textColor="@color/teal_200"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtCorreoElectronico"
        android:layout_width="264dp"
        android:layout_height="48dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:fontFamily="@font/acme"
        android:hint="Correo Electronico"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/txtContrasena"
        android:layout_width="262dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:fontFamily="@font/acme"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCorreoElectronico" />

    <Button
        android:id="@+id/btnIniciarSession"
        android:layout_width="195dp"
        android:layout_height="56dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:fontFamily="@font/acme"
        android:isScrollContainer="false"
        android:text="Iniciar Session"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:icon="@drawable/login_48px"
        app:iconPadding="5dp"
        app:iconTintMode="multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtContrasena" />

    <Button
        android:id="@+id/btnRecuperarContrasena"
        android:layout_width="200dp"
        android:layout_height="61dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:fontFamily="@font/acme"
        android:text="Recuperar Contraseña"
        android:textColor="@color/white"
        android:textCursorDrawable="@drawable/high_priority_48px"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:icon="@drawable/high_priority_48px"
        app:iconPadding="5dp"

        app:iconTintMode="multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegistrarse" />

    <Button
        android:id="@+id/btnRegistrarse"
        android:layout_width="195dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:fontFamily="@font/acme"
        android:text="Registrarse"
        android:textColor="@color/white"
        android:textCursorDrawable="@drawable/registration_40px"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:icon="@drawable/registration_40px"
        app:iconTintMode="multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnIniciarSession"
        app:rippleColor="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>